<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1ab741"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tittleEx"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="实验大纲" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:id="@+id/ll_btnsEx">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一章"
            android:id="@+id/lastEx"
            android:layout_weight="1"
            android:layout_gravity="bottom" />
        <Button
            android:text="返回目录"
            android:layout_weight="2"
            android:id="@+id/returnDirectoryEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一章"
            android:id="@+id/nextEx"
            android:layout_gravity="bottom" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tittleEx"
        android:layout_above="@id/ll_btnsEx">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webViewEx"/>
    </LinearLayout>
</RelativeLayout>