<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/loginPhoneRelative"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话："
            android:textSize="@dimen/label_font_size"
            android:layout_alignParentLeft="true"
            android:id="@+id/loginPhoneTextView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18304011351"
            android:id="@+id/loginPhoneEditText"
            android:layout_toEndOf="@+id/loginPhoneTextView"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/loginPasswordRelative"
        android:layout_below="@+id/loginPhoneRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="@dimen/label_font_size"
            android:id="@+id/loginPasswordTextView" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23"
            android:inputType="textPassword"
            android:id="@+id/loginPasswordEditText"
            android:layout_toEndOf="@+id/loginPasswordTextView" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginButton"
        android:text="@string/login"
        android:textSize="20dp"
        android:layout_below="@+id/loginPasswordRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
